{
  "name": "iot-platform-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"src/test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "kafka:start": "docker-compose -f docker-compose.kafka.yml up -d",
    "kafka:stop": "docker-compose -f docker-compose.kafka.yml down",
    "kafka:init": "ts-node src/scripts/kafka-init.ts",
    "mqtt:init": "ts-node src/scripts/mqtt-init.ts",
    "redis:init": "ts-node src/scripts/redis-init.ts",
    "consumers:start": "ts-node -r tsconfig-paths/register src/scripts/consumers-start.ts",
    "docker:build": "docker build -t smartlife-iot-platform:latest .",
    "docker:build:prod": "docker build -t smartlife-iot-platform:production -f Dockerfile .",
    "docker:up": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose -f docker-compose.prod.yml logs -f app",
    "docker:logs:all": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:restart": "docker-compose -f docker-compose.prod.yml restart app",
    "docker:ps": "docker-compose -f docker-compose.prod.yml ps",
    "docker:clean": "docker system prune -a --volumes -f",
    "prod:migrate": "docker-compose -f docker-compose.prod.yml exec app npm run migration:run",
    "prod:seed": "docker-compose -f docker-compose.prod.yml exec app npm run seed",
    "prod:shell": "docker-compose -f docker-compose.prod.yml exec app sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:unit": "jest --testMatch='**/*.spec.ts'",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/config/migration.config.ts",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:create": "npm run typeorm -- migration:create",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "seed": "ts-node -r tsconfig-paths/register src/database/seeds/seed.command.ts",
    "db:reset": "npm run migration:revert && npm run migration:run && npm run seed",
    "schema:drop": "npm run typeorm -- schema:drop",
    "schema:sync": "npm run typeorm -- schema:sync"
  },
  "dependencies": {
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bull": "^11.0.4",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/event-emitter": "^3.0.1",
